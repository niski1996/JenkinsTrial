pipeline {
    agent any

    stages {
        stage('w/o docker') {
            steps {
                sh '''
                echo "dupa"
                                touch container.txt
                ls -la

                '''
                
            }
        }
        
        stage('w/ docker') {
            agent {
                docker {
                    image 'python:3.10.17'
                    reuseNode true
                }
            }
            steps {
                sh 'echo "dupa z dockerem"'
                sh '''
                touch container.txt
                ls -la
                '''
                sh 'python --version'
            }
        }
    }
}
